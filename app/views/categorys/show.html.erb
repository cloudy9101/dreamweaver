<% provide(:title, @ctg.name) %>

<div class="ui grid">
	<div class="twelve wide column">
		<div class="ui dividing header"><%= @ctg.name %></div>
		<div class="ui two cards">
			<% @targets.each do |target| %>
				<%= render partial: 'targets/card', locals: { target: target } %>
			<% end %>
		</div>
			<%= will_paginate @targets, { class: 'flickr_pagination', next_label: ">>", previous_label: "<<" } %>
	</div>
	<div class="four wide column">
		<%= render 'static_pages/sidebar' %>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for @new_target, html: { class: "form-horizontal", role: "form" } do |f| %>
				<div class="form-group">
					<%= f.label :name, "目标标题：", class: "col-sm-3 control-label" %>
					<div class="col-sm-9">
						<%= f.text_field :name, class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :detail, "目标描述：", class: "col-sm-3 control-label" %>
					<div class="col-sm-9">
						<%= f.text_area :detail, class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :start_time, "开始时间：", class: "col-sm-3 control-label" %>
					<div class="col-sm-9">
						<%= f.date_field :start_time, class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :finish_time, "结束时间：", class: "col-sm-3 control-label" %>
					<div class="col-sm-9">
						<%= f.date_field :finish_time, class: "form-control" %>
					</div>
				</div>
				<%= f.submit "提交", class: "btn btn-primary col-md-offset-3" %>
			<% end %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-7">
			<div class="page-header">
				<h3><%= @target.name %></h3>
			</div>
			<div>
				<p>开始日期：<%= @target.start_time %> --- 结束时间：<%= @target.finish_time %></p>
				<% if @target.user == current_user %>
					<button class="btn btn-primary" type="button" data-toggle="modal" data-target="#punch">打卡</button>
					<!-- Modal punch -->
					<div class="modal fade" id="punch" tabindex="-1" role="dialog" aria-labelledby="punchLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<%= @target.name %>(@<%= Time.now.strftime "%Y-%m-%d" %>）
								</div>
								<div class="modal-body">
									<%= form_for @today, url: target_days_path(@target), html: { class: "form-horizontal", role: "form" } do |f| %>
										<div class="form-group">
											<%= f.label :comment, "今日记录", class: "col-sm-2 control-label" %>
											<div class="col-sm-10">
												<%= f.text_area :comment, class: "form-control" %>
											</div>
										</div>

								</div>
								<div class="modal-footer">
										<button class="btn btn-default" type="button" data-dismiss="modal">关闭</button>
										<%= f.submit "提交", class: "btn btn-primary" %>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
			<div>
				<% length = @target.finish_time - @target.start_time %>
				<% (0..length).each do |i| %>
					<% if @day = @target.days.find_by(date_at: "#{@target.start_time + i}") %>
						<%= link_to target_day_path(@target, @day) do %>
							<button class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="<%= @target.start_time + i %>"></button>
						<% end %>
					<% else %>
						<button class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="<%= @target.start_time + i %>"></button>
					<% end %>
						
				<% end %>
			</div>
		</div>
		<%= render 'users/sidebar' %>
	</div>
</div>
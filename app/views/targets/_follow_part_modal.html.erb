<div class="ui modal">
  <i class="close icon"></i>
  <div class="header">建立该目标</div>
  <div class="content">
    <div class="image"><i class="trophy icon"></i></div>
    <div class="description">
      <%= form_for target, url: targets_path, html: { class: "ui form" } do |f| %>
        <div class="field">
          <%= f.label :start_time, '开始时间' %>
          <%= f.date_field :start_time %>
        </div>
        <div class="field">
          <%= f.label :finish_time, '结束时间' %>
          <%= f.date_field :finish_time %>
        </div>
        <%= f.hidden_field :abstract_target_id %>
        <div class="field">
          <%= f.submit '提交', class: "ui blue button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
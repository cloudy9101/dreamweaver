<% if signed_in? %>
<div class="col-md-4 pull-right">
	<div class="panel panel-default">
		<div class="panel-heading">
			<%= link_to "创建新目标", new_target_path, class: "btn btn-primary" %>
			<%= link_to "我的目标", users_path(current_user), class: "btn btn-default" %>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading text-center">
			<span class="text-muted">人生的六个高度理论</span>
		</div>
		<div class="panel-body">
			<ul>
				<li>1.原则（个人的价值观 原则 目标）</li>
				<li>2.愿景（3-5年的工作目标）</li>
				<li>3.目标（1-2年的阶段性成果）</li>
				<li>4.责任范围（工作上的角色，生活中的角色）</li>
				<li>5.任务（需要一步以上完成的事情）</li>
				<li>6.下一步行动（切实具体的动作）</li>
			</ul>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading text-center">
			<span class="text-muted">使用指南</span>
		</div>
		<div class="panel-body">
			<ul>
				<li>根据六个高度理论审视自己</li>
				<li>根据自己的目标创建新目标</li>
				<li>设置目标的内容和时间</li>
				<li>每天坚持打卡</li>
				<li>最终完成目标</li>
			</ul>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading text-center">
			<span class="text-muted">统计信息</span>
		</div>
		<div class="panel-body">
			<ul>
				<li>全站目标总数：<%= Target.all.count %></li>
				<li>全站打卡天数：<%= Day.all.count %></li>
				<li>总会员数：<%= User.all.count %></li>
			</ul>
		</div>
	</div>
</div>
<% else %>
<div class="col-md-4 sign-up panel panel-default pull-right">
	<div class="panel-body">
		<ul class="nav nav-tabs" role="tablist">
			<li role="presentation" class="active"><a href="#sign-up" role="tab" data-toggle="tab">注册</a></li>
			<li role="presentation"><a href="#sign-in" role="tab" data-toggle="tab">登陆</a></li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane fade in active" id="sign-up" role="tabpanel">
				<%= form_for @new_user, url: user_registration_path(@new_user), html: { class: "form-horizontal", role: "form", multipart: true } do |f| %>
					<div class="form-group text-center">
						<%= image_tag "default.jpg", class: "round-thumb" %>
					</div>
					<div class="form-group">
						<%= f.label :avatar, "头像", class: "col-sm-3 control-label" %>
						<div class="col-sm-9">
							<%= f.file_field :avatar %>
							<%= f.hidden_field :avatar_cache %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :name, "用户名", class: "col-sm-3 control-label" %>
						<div class="col-sm-9">
							<%= f.text_field :name, class: "form-control", placeholder: "Username" %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :email, "邮箱", class: "col-sm-3 control-label" %>
						<div class="col-sm-9">
							<%= f.text_field :email, class: "form-control", placeholder: "Email" %>				
						</div>
					</div>
					<div class="form-group">
						<%= f.label :password, "密码", class: "col-sm-3 control-label" %>
						<div class="col-sm-9">
							<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :password_confirmation, "确认密码", class: "col-sm-3 control-label" %>
						<div class="col-sm-9">
							<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password" %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-3 col-sm-offset-3">
							<%= f.submit "注册", class: "btn btn-primary" %>
						</div>
					</div>
					
				<% end %>
			</div>
			<div class="tab-pane fade" id="sign-in" role="tabpanel">
				<%= form_for(@new_user, url: user_session_path(@new_user), html: { class: "form-horizontal" }) do |f| %>
					<div class="form-group text-center">
						<%= image_tag "default.jpg", class: "round-thumb" %>
					</div>
					<div class="form-group">
						<%= f.label :email, "邮箱", class: "col-sm-3 control-label" %>
						<div class="col-sm-9">
							<%= f.email_field :email, class: "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :password, "密码", class: "col-sm-3 control-label" %>
						<div class="col-sm-9">
							<%= f.password_field :password, class: "form-control" %>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-3 col-sm-offset-3">
							<%= f.submit "登陆", class: "btn btn-primary" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% end %>
<% provide(:title, "精选") %>

<div class="container">
	<div class="row">
		<div class="col-md-8">
			<div class="panel panel-default">
				<div class="panel-heading">
					<span class="text-muted">
						精选
					</span>
				</div>
				<ul class="list-group">
					<% @targets.each do |target| %>
						<li class="list-group-item">
							<%= render partial: 'targets/progress_b', locals: { target: target } %>
						</li>
					<% end %>
				</ul>
			</div>
			<%= will_paginate @targets, renderer: BootstrapPagination::Rails %>
		</div>
		<%= render 'sidebar' %>
	</div>
</div>